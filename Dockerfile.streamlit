# Build stage
FROM python:3.11-slim-bookworm AS builder

# Copy uv directly from its official image (best practice)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install build dependencies (will NOT be in final image)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# uv optimizations
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
ENV PYTHONPATH=/app
# Increase HTTP timeout for large packages (vllm is 416MB)
ENV UV_HTTP_TIMEOUT=300

# Copy dependency files first (for better layer caching)
COPY pyproject.toml uv.lock ./

# Install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project

# Copy ONLY runtime-required application code (explicit COPY)
COPY app.py ./
COPY client/ ./client/
COPY core/ ./core/
COPY ingestion/ ./ingestion/
COPY utils/ ./utils/

# Install current project and finalize sync
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen

# Runtime stage (clean, minimal image)
FROM python:3.11-slim-bookworm

# Copy UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install ONLY runtime dependencies (no build tools)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    postgresql-client \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy virtual environment from builder (only runtime files)
COPY --from=builder /app/.venv /app/.venv

# Copy ONLY runtime-required application code
COPY app.py ./
COPY client/ ./client/
COPY core/ ./core/
COPY ingestion/ ./ingestion/
COPY utils/ ./utils/

# Set environment
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app

# Expose Streamlit port
EXPOSE 8501

# Create a non-root user for security
RUN useradd -m appuser && chown -R appuser /app
USER appuser

# Health check for Streamlit
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Run the Streamlit app
CMD ["streamlit", "run", "app.py", "--server.address", "0.0.0.0"]
