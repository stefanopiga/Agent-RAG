# Build stage
FROM python:3.11-slim-bookworm AS builder

# Copy UV from official image
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# uv optimizations
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
ENV PYTHONPATH=/app
# Increase HTTP timeout for large packages (vllm is 416MB)
ENV UV_HTTP_TIMEOUT=300

# Copy dependency files first (for better layer caching)
COPY pyproject.toml uv.lock ./

# Install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project

# Copy application code
COPY api/ ./api/
COPY core/ ./core/
COPY ingestion/ ./ingestion/
COPY utils/ ./utils/

# Install current project and finalize sync
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen

# Clean up .venv to reduce size: remove unnecessary files (keep .dist-info for metadata)
RUN find /app/.venv -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true && \
    find /app/.venv -type f -name "*.pyc" -delete && \
    find /app/.venv -type f -name "*.pyo" -delete && \
    find /app/.venv -type f -name "*.py[co]" -delete && \
    find /app/.venv -type d -name "tests" -not -path "*/site-packages/*/tests" -exec rm -rf {} + 2>/dev/null || true && \
    find /app/.venv -type d -name "test" -not -path "*/site-packages/*/test" -exec rm -rf {} + 2>/dev/null || true && \
    find /app/.venv -type d -name "docs" -not -path "*/site-packages/*/docs" -exec rm -rf {} + 2>/dev/null || true && \
    find /app/.venv -type f -name "*.txt" -path "*/test*" -delete 2>/dev/null || true && \
    find /app/.venv -type f -name "*.md" -path "*/test*" -delete 2>/dev/null || true

# Runtime stage
FROM python:3.11-slim-bookworm

# Copy UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install only runtime dependencies (no build tools)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create non-root user first (needed for --chown)
RUN useradd -m appuser

# Copy virtual environment from builder with correct ownership
COPY --from=builder --chown=appuser:appuser /app/.venv /app/.venv

# Copy application code with correct ownership
COPY --chown=appuser:appuser api/ ./api/
COPY --chown=appuser:appuser core/ ./core/
COPY --chown=appuser:appuser ingestion/ ./ingestion/
COPY --chown=appuser:appuser utils/ ./utils/

# Set environment
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app

# Expose the API port
EXPOSE 8000

USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# Start the API service
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
