# Build stage
FROM python:3.11-slim-bookworm AS builder

# Copy UV from official image
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# uv optimizations
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
ENV PYTHONPATH=/app
# Increase HTTP timeout for large packages (vllm is 416MB)
ENV UV_HTTP_TIMEOUT=300

# Copy dependency files first (for better layer caching)
COPY pyproject.toml uv.lock ./

# Install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project

# Copy application code (MCP server needs docling_mcp, core, ingestion, utils)
COPY docling_mcp/ ./docling_mcp/
COPY core/ ./core/
COPY ingestion/ ./ingestion/
COPY utils/ ./utils/

# Install current project and finalize sync
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen

# Runtime stage
FROM python:3.11-slim-bookworm

# Copy UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install only runtime dependencies (no build tools)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy virtual environment from builder (only runtime files)
COPY --from=builder /app/.venv /app/.venv

# Copy application code
COPY docling_mcp/ ./docling_mcp/
COPY core/ ./core/
COPY ingestion/ ./ingestion/
COPY utils/ ./utils/

# Set environment
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app

# Expose the MCP HTTP server port (for /health and /metrics)
EXPOSE 8080

# Create a non-root user for security
RUN useradd -m appuser && chown -R appuser /app
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Start the MCP HTTP server
CMD ["uv", "run", "python", "-m", "docling_mcp.http_server"]
